{
  "platform": "docker",
  "app": "smart-campus",
  "port": 8080,
  "build": {
    "dockerfile": "Dockerfile"
  },
  "disks": [
    {
      "name": "logs",
      "mountTo": "/app/logs"
    }
  ],
  "healthCheck": {
    "path": "/actuator/health",
    "port": 8080,
    "initialDelaySeconds": 120,
    "periodSeconds": 30,
    "timeoutSeconds": 10
  }
}


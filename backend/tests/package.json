{
  "name": "smart-campus-tests",
  "version": "1.0.0",
  "description": "Test suite for Smart Campus Platform",
  "scripts": {
    "test": "jest",
    "test:auth": "jest auth-service.test.ts",
    "test:booking": "jest booking-service.test.ts",
    "test:marketplace": "jest marketplace-service.test.ts",
    "test:saga": "jest saga-pattern.test.ts",
    "test:circuit-breaker": "jest circuit-breaker.test.ts",
    "test:all": "jest --runInBand"
  },
  "dependencies": {
    "amqplib": "^0.10.3",
    "axios": "^1.6.2"
  },
  "devDependencies": {
    "@types/amqplib": "^0.10.4",
    "@types/jest": "^29.5.14",
    "@types/node": "^20.10.5",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "typescript": "^5.3.3"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "testTimeout": 30000,
    "collectCoverage": true,
    "coverageDirectory": "coverage",
    "testMatch": [
      "**/*.test.ts"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json"
    ],
    "transform": {
      "^.+\\.ts$": "ts-jest"
    }
  }
}
